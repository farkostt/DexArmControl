<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    </GridView>


    <ImageView
        android:id="@+id/arrows_background"
        android:layout_width="275dp"
        android:layout_height="274dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_background" />

    <ImageView
        android:id="@+id/btn_arrow_up"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_btn_arrow_up"
        app:layout_constraintTop_toTopOf="@id/arrows_background"
        app:layout_constraintLeft_toLeftOf="@id/arrows_background"
        app:layout_constraintRight_toRightOf="@id/arrows_background"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/btn_arrow_down"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_btn_arrow_down"
        app:layout_constraintBottom_toBottomOf="@id/arrows_background"
        app:layout_constraintLeft_toLeftOf="@id/arrows_background"
        app:layout_constraintRight_toRightOf="@id/arrows_background"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:id="@+id/btn_arrow_left"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_btn_arrow_left"
        app:layout_constraintLeft_toLeftOf="@id/arrows_background"
        app:layout_constraintTop_toTopOf="@id/arrows_background"
        app:layout_constraintBottom_toBottomOf="@id/arrows_background"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:id="@+id/btn_arrow_right"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_btn_arrow_right"
        app:layout_constraintRight_toRightOf="@id/arrows_background"
        app:layout_constraintTop_toTopOf="@id/arrows_background"
        app:layout_constraintBottom_toBottomOf="@id/arrows_background"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:id="@+id/btn_arrow_middle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_btn_middle"
        app:layout_constraintRight_toRightOf="@id/arrows_background"
        app:layout_constraintLeft_toLeftOf="@id/arrows_background"
        app:layout_constraintTop_toTopOf="@id/arrows_background"
        app:layout_constraintBottom_toBottomOf="@id/arrows_background"/>



